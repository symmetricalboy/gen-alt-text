{
  "manifest_version": 3,
  "name": "Bluesky Alt Text Generator",
  "description": "Automatically generate accessible alt text for images on Bluesky using Google Gemini AI.",
  "version": "0.1.0",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "author": "Your Name",
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://*.bsky.app/*",
    "https://generativelanguage.googleapis.com/*",
    "*://*.google.com/*",
    "http://localhost/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{bf28fcb2-7a85-44b3-add7-7a47fdd9a4a4}"
    }
  },
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Default Popup Title",
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:3000; object-src 'self';",
    "sandbox": "script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:3000; sandbox allow-scripts allow-forms allow-popups allow-modals; child-src 'self';"
  }
}